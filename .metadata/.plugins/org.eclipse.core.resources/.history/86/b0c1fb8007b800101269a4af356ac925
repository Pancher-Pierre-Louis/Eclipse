package Cartes;
import java.util.ArrayList;


enum Couleur33{
	CARREAU, PIQUE, COEUR, TREFLE;
}

enum Valeur33{
	SEPT(7),HUIT(8),NEUF(9),DIX(10),VALET(11),DAME(12),ROI(13),AS(14);
	
	private int puissance;
	
	private Valeur33(int puissance) {
		this.puissance = puissance;
	}
	
	public int getPuissance() {
		return puissance;
	}
}

class Cartes33{
	private Valeur33 valeur;
	private Couleur33 couleur;
	private boolean atout;
	private String motif = "rond";
	private boolean isVisible;
	
	public Cartes33(Valeur33 valeur,Couleur33 couleur) { // CONSTRUCTEUR (s'execute automatiquement avec new Cartes32
        this.valeur = valeur;
        this.couleur = couleur;
        this.atout = false;
        this.motif = "Classique";
        this.isVisible = false;
	}
	public String getMotif() {
		return motif;
	}
	public void setMotif(String motif) {
		this.motif = motif;
	}
	public boolean getAtout() {
		return atout;
	}
	public boolean getIsVisible() {
		return isVisible;
	}
	
	public Valeur33 getValeur() {
		return valeur;
	}
	public Couleur33 getCouleur() {
		return couleur;
	}
}

class Paquet33{
	ArrayList<Cartes33> paquet = new ArrayList<>();

	public Paquet33() {
		for(Valeur33 valeur : Valeur33.values()) {
			for(Couleur33 couleur: Couleur33.values()) {
				paquet.add(new Cartes33(valeur,couleur));
			}
		}
	}
	public Cartes33 getCarte(int valeurCarte) {
		return paquet.get(valeurCarte);
	}

}

public class Main2 {
	
	public static void main(String[] args) {
		Cartes33 uneCarte = new Cartes33(Valeur33.AS,Couleur33.PIQUE);
		String m = uneCarte.getMotif();
		int v = uneCarte.getValeur().getPuissance();
		System.out.println(m);
		System.out.println(v);
		
		Paquet33 nouveauPaquet = new Paquet33();
		System.out.println(nouveauPaquet.getCarte(0));
			
	}
	
}