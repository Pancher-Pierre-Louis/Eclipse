package Cartes;  
import java.util.ArrayList;  

// ğŸ¨ Ã‰numÃ©ration des couleurs possibles des cartes
enum Couleur33 {
    CARREAU, PIQUE, COEUR, TREFLE;
    // Une enum est un type qui contient un ensemble fixe de constantes.
    // Ici, on dÃ©finit les 4 couleurs dâ€™un jeu de cartes.
}

// ğŸ¯ Ã‰numÃ©ration des valeurs possibles des cartes (7 Ã  As)
enum Valeur33 {
    SEPT(7), HUIT(8), NEUF(9), DIX(10), VALET(11), DAME(12), ROI(13), AS(14);
    // Chaque constante est associÃ©e Ã  un nombre entre parenthÃ¨ses : sa puissance.

    private int puissance; // Champ pour stocker la valeur numÃ©rique (7, 8, 9, ...)

    private Valeur33(int puissance) {
        // Constructeur appelÃ© automatiquement pour chaque valeur de lâ€™enum
        this.puissance = puissance;
    }

    public int getPuissance() {
        // Getter : permet de rÃ©cupÃ©rer la puissance dâ€™une carte
        return puissance;
    }
}

// ğŸƒ Classe reprÃ©sentant une carte individuelle
class Cartes33 {
    private Valeur33 valeur;     // La valeur (As, Roi, Dame, etc.)
    private Couleur33 couleur;   // La couleur (Pique, Coeur, etc.)
    private boolean atout;       // Indique si la carte est un atout
    private String motif = "rond"; // Le style du dos de la carte
    private boolean isVisible;   // Si la carte est visible ou face cachÃ©e

    // ğŸ—ï¸ Constructeur : s'exÃ©cute Ã  chaque crÃ©ation d'une carte
    public Cartes33(Valeur33 valeur, Couleur33 couleur) {
        this.valeur = valeur;      // Initialise la valeur (ex : As)
        this.couleur = couleur;    // Initialise la couleur (ex : Pique)
        this.atout = false;        // Par dÃ©faut, la carte n'est pas un atout
        this.motif = "Classique";  // Motif par dÃ©faut
        this.isVisible = false;    // Par dÃ©faut, la carte est face cachÃ©e
    }

    // --- Getters et Setters (accesseurs) ---

    public String getMotif() {
        return motif;
    }

    public void setMotif(String motif) {
        this.motif = motif;
    }

    public boolean getAtout() {
        return atout;
    }

    public boolean getIsVisible() {
        return isVisible;
    }

    public Valeur33 getValeur() {
        return valeur;
    }

    public Couleur33 getCouleur() {
        return couleur;
    }

    // ğŸ” RedÃ©finition de toString() : appelÃ©e automatiquement quand on affiche une carte
    public String toString() {
        return getValeur() + " de " + getCouleur()
               + " (puissance " + getValeur().getPuissance() + ")";
        // Exemple dâ€™affichage : "AS de PIQUE (puissance 14)"
    }
}

class Paquet33 {
    ArrayList<Cartes33> paquet = new ArrayList<>();
    // ğŸ¬ Constructeur : crÃ©e automatiquement toutes les cartes du jeu
    public Paquet33() {
        for (Valeur33 valeur : Valeur33.values()) {      // Parcourt toutes les valeurs possibles
            for (Couleur33 couleur : Couleur33.values()) { // Parcourt toutes les couleurs possibles
                paquet.add(new Cartes33(valeur, couleur)); // CrÃ©e la carte et lâ€™ajoute au paquet
            }
        }
    }
    // ğŸ” Retourne une carte prÃ©cise du paquet selon son index (0 = premiÃ¨re carte)
    public Cartes33 getCarte(int index) {
        return paquet.get(index);
    }
}
// ğŸš€ Classe principale contenant le point d'entrÃ©e du programme
public class Main2 {
    public static void main(String[] args) {
        Cartes33 uneCarte = new Cartes33(Valeur33.AS, Couleur33.PIQUE);
        String m = uneCarte.getMotif();                 // "Classique"
        int v = uneCarte.getValeur().getPuissance();    // 14

        System.out.println(m); // Affiche "Classique"
        System.out.println(v); // Affiche "14"

        // CrÃ©ation dâ€™un paquet complet de 32 cartes
        Paquet33 nouveauPaquet = new Paquet33();

        // Affiche la premiÃ¨re carte du paquet (grÃ¢ce Ã  toString)
        System.out.println(nouveauPaquet.getCarte(0));
        // Exemple : "SEPT de CARREAU (puissance 7)"
    }
}