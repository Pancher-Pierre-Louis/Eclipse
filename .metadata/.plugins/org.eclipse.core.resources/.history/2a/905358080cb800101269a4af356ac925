import java.util.ArrayList;
package Cartes;

class Joueur {
    private String nom;
    private ArrayList<String> main = new ArrayList<>(); // Liste de cartes

    public Joueur(String nom) { // Constructeur
        this.nom = nom;
    }

    public void ajouterCarte(String carte) {
        main.add(carte); // on ajoute une carte à la main
    }

    public void afficherMain() {
        System.out.println(nom + " a les cartes : " + main);
    }
}

public class Main3 {
    public static void main(String[] args) {
        Joueur j = new Joueur("Alice"); // instanciation
        j.ajouterCarte("As de Pique");
        j.ajouterCarte("Roi de Cœur");
        j.afficherMain(); // "Alice a les cartes : [As de Pique, Roi de Cœur]"
    }
}